<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_colorTheme_itemBg"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/view_color_theme_item_bg">

        <ImageView
            android:id="@+id/iv_colorTheme_itemSelect_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gxzt_choose"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_colorTheme_itemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝色"
        android:textColor="@color/view_theme_item_text_color"
        android:textSize="@dimen/T12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

</LinearLayout>