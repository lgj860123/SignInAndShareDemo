<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <com.pybeta.daymatter.signinandsharedemo.custom.AutoRelativeLayout
        android:id="@+id/rl_itemBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:ratio = "0.73">

        <ImageView
            android:id="@+id/iv_personalityItem_bg"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_itemSelect_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/gxzt_choose"
            android:layout_alignParentRight="true"/>

    </com.pybeta.daymatter.signinandsharedemo.custom.AutoRelativeLayout>

    <TextView
        android:id="@+id/tv_itemDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="蓝色"
        android:textColor="@color/view_theme_item_text_color"
        android:textSize="@dimen/T12"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

</LinearLayout>